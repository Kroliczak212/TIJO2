FROM node:18-alpine

WORKDIR /app

# Zainstaluj zależności
COPY package*.json ./
RUN npm install

# Skopiuj kod (będzie nadpisany przez volume mount w dev)
COPY . .

# Skopiuj entrypoint script
COPY entrypoint.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh

# Expose port
EXPOSE 3001

# Użyj entrypoint do auto-inicjalizacji DB
ENTRYPOINT ["/entrypoint.sh"]
CMD ["npm", "run", "dev"]
